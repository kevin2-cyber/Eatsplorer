<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:contentDescription="@android:string/ok"
        android:src="@drawable/onboarding_image_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_onboarding_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:fontFamily="@font/samsung"
        android:text="Satisfy your cravings \n with ease"
        android:textAlignment="center"
        android:textColor="@color/blue_vogue"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <TextView
        android:id="@+id/tv_onboarding_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/samsung"
        android:gravity="center"
        android:text="Integer a viverra sit feugiat leo\ncommodo nunc."
        android:textAlignment="gravity"
        android:textColor="@color/lynch"
        app:layout_constraintStart_toStartOf="@+id/tv_onboarding_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_title" />



</androidx.constraintlayout.widget.ConstraintLayout>